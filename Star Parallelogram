#include <iostream>

int main()
{
    for(int i = 0; i < 10; i++){
        for(int space = 10; space > i; space--){
            std::cout << " ";
        }
        for(int j = 0; j < i; j++){
            std::cout << "* ";
        }
        std::cout << std::endl;
    }
    
    for(int a = 0; a < 10; a++){
        for(int space2 = 0; space2 < a; space2++){
            std::cout << " ";
        }
        for(int b = 10; b > a; b--){
            std::cout << "* ";
        }
        std::cout << std::endl;
    }
    
    return 0;
}
